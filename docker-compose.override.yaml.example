services:
  # disable nginx service in development
  nginx:
    profiles: ["disabled"]

  web:
    command: >
      sh -c
      "python manage.py migrate --noinput &&
      python manage.py runserver 0.0.0.0:8000"
    volumes:
      - ./:/app
      - static_volume:/app/staticfiles
    ports:
      - "8000:8000"